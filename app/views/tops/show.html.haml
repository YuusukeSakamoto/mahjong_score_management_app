/ ログインしている場合
- if user_signed_in?
  .container.pt-4
    .row.d-flex.justify-content-center
      .col-lg-10.text-center.text-white.px-5.mb-4.mx-auto.d-md-flex.justify-content-evenly
        - if recording?
          = link_to "次の対局を記録する(#{conversion_kanji_num(session_players_num)}人麻雀)", new_match_path, 
            class: "btn d-block rounded fw-bold box-shadow text-white px-3 py-2 py-md-3 bg-green"
        - else 
          = link_to '成績記録 (四人麻雀)',new_player_path(play_type: 4), 
            class: "btn d-block rounded fw-bold box-shadow text-white px-3 py-2 py-md-3 bg-green"
          = link_to '成績記録 (三人麻雀)',new_player_path(play_type: 3), 
            class: "btn d-block rounded fw-bold box-shadow text-white px-3 py-2 py-md-3 bg-green mt-3 mt-md-0"
          - if @player.leagues_registered?
            = link_to 'リーグ対局記録',leagues_path, 
              class: "btn d-block rounded fw-bold box-shadow text-green px-3 py-2 py-md-3 border-green-bold mt-3 mt-md-0"
      = render partial: 'match_groups/result_table' if recording?
      = render partial: 'result', locals: { play_type: 4 }
      = render partial: 'result', locals: { play_type: 3 }

  / ログインしていない場合
- else
  .pt-4
    %section#home.container
      .mx-2
        %h1.display-4.mt-5
          %span.d-block 麻雀成績を記録して
          %span.d-block もっと麻雀を楽しもう！

        .col-5.col-md-4.col-lg-3.pt-3.mb-5.text-center.h-auto
          = link_to '無料アカウント登録', new_user_registration_path,
            class: "btn d-block rounded-pill fw-bold box-shadow text-white px-2 py-3 mt-3 bg-green"
          = link_to 'ログイン', new_user_session_path,
            class: "btn d-block rounded-pill fw-bold box-shadow text-white px-2 py-3 mt-3 bg-orange"

    %section#step_01.text-navyblue
      .container.pb-3
        %p.border-green-left.fw-bold.ps-2.mt-4 Step01 
        %h2 
          %span アカウント登録は記録者だけでOK！
        .temporary_image
    %section#step_01.text-navyblue
      .container.pb-3
        %p.border-green-left.fw-bold.ps-2.mt-4 Step02
        %h2 
          %span 持ち点・ウマなどのルールを登録！
        .temporary_image
    %section#step_01.text-navyblue
      .container.pb-3
        %p.border-green-left.fw-bold.ps-2.mt-4 Step03 
        %h2 
          %span 点数を入れるだけ！ポイントも自動計算！
        .temporary_image

    %section.container.text-center
      .mx-2
        %h2.display-5.mt-5
          %span.d-block 麻雀成績を記録して
          %span.d-block もっと麻雀を楽しもう！
        .col-5.col-md-4.col-lg-3.pt-3.mb-5.text-center.h-auto.m-auto
          = link_to '無料アカウント登録', new_user_registration_path,
            class: "btn d-block rounded-pill fw-bold box-shadow text-white px-2 py-3 mt-3 bg-green"
          = link_to 'ログイン', new_user_session_path,
            class: "btn d-block rounded-pill fw-bold box-shadow text-white px-2 py-3 mt-3 bg-orange"