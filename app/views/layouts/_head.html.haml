- if params[:tk]
  - if params[:resource_type]
    = display_meta_tags(share_links_meta_tags)
  - elsif params[:u_id]
    = display_meta_tags(players_authentications_meta_tags)
  - elsif params[:p]
    = display_meta_tags(user_invitation_meta_tags)
- else
  = display_meta_tags(default_meta_tags)
