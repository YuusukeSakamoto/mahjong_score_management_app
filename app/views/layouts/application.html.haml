%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = render 'layouts/head'
  %body
    = render 'layouts/header'
    = render 'layouts/flash'
    = yield
    = render 'layouts/footer'
    = debug(session[:players]) if Rails.env.development?
    %p.mb-0= "session[:mg] #{session[:mg]}" if Rails.env.development?
    %p.mb-0= "session[:rule] #{session[:rule]}" if Rails.env.development?
    %p.mb-0= "session[:league] #{session[:league]}" if Rails.env.development?
    %p.mb-0= "session[:previous_url] #{session[:previous_url]}" if Rails.env.development?
    = include_gon
    / js
    %script{crossorigin: "anonymous", integrity: "sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", src: "https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"}
