<% provide(:button_text, '登録') %>
<h1>グループ登録</h1>
<%= render 'shared/flash' %>

<%= form_with model: @group do |f| %>
  <%= f.fields_for :members do |i| %>
    <%# 上記new、editいずれも、この中身は5回表示(fileの選択ボタンが5個でる) %>
    <%= i.text_field :name %>
  <% end %>
<% end %>

<%= form_with(model: @group) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="field">
    <%= f.label :name, "グループ名" %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>  
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit yield(:button_text), class: "btn btn-primary w-25 mt-3" %>
<% end %>

<%= link_to '戻る', :back, class: "btn btn-outline-secondary w-25 mt-3" %>

